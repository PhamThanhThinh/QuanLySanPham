<div class="container mt-3">
  <h2>@ViewData["Title"]</h2>
  <div class="col end-0">
    <a asp-action="Create" class="btn btn-primary">
      Thêm Sản Phẩm Mới
    </a>
  </div>
  <div class="shadow p-3 mb-5 bg-light rounded">
    <table class="table table-striped table-hover table-responsive">
      <thead>
        <tr>
          <th>Mã Sản Phẩm</th>
          <th>Tên Sản Phẩm</th>
          <th>Giá</th>
          <th>Số Lượng</th>
          <th>Thao Tác</th>
        </tr>
      </thead>
      <tbody>
        @if (Model != null && Model.Any())
        {
          @foreach(var item in Model)
          {
            <tr>
              <td>
                @item.Id
              </td>
              <td>
                @item.ProductName
              </td>
              <td>
                @item.Price
              </td>
              <td>
                @item.Quantity
              </td>
              <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Sửa</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Chi Tiết</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
              </td>
            </tr>
          }
        }
        else
        {
          <tr>
            <td colspan="5">
              Không có dữ liệu
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>